@model IEnumerable<HW6.ProductCategory>

@{
    ViewBag.Title = "Home Page";
}

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Adventure Works</a>
        </div>
        <ul class="nav navbar-nav">
            <!--<li class="active"><a href="#">Home</a></li>-->
            >
                @foreach (var item in Model)
                {
                    <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">@item.Name <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @foreach (var cat in item.ProductSubcategories)
                            {
                                <li><a href="#">@Html.ActionLink(cat.Name, "ChosenCategory", new { id = cat.ProductSubcategoryID })</a></li> <!--I need to pass the ProductSubcategoryID-->
                            }
                        </ul>
                    </li>
                }   
        </ul>
    </div>
</nav>
