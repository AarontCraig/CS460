
@{
    ViewBag.Title = "Awesome_Calculator";
}

<h2>Let's figure out how awesome you are</h2>
<form method="post">
    <!--Hard coded error checking for all these values. The user must put in a valid value, or I tell them to try again-->
    @if (ViewBag.name == null)
    {
        <p style="color: red">*Please input a valid answer</p>
        <label style="color: red" for="name">What is your name?</label>
    }
    else
    {
        <label for="name">What is your name?</label>
    }
    <input type="text" name="name" value="" required/>
    @if (ViewBag.age == null)
    {
        <p style="color: red">*No You're not. Try again.</p>
        <label style="color: red" for="age">How old are you?</label>
    }
    else
    {
        <label for="age">How old are you?</label>
    }
    <input type="number" name="age" value="" required/>
    @if (ViewBag.gamesBeaten == null)
    {
        <p style="color: red">*There aren't that many DS games!!</p>
        <label style="color: red" for="gamesBeaten">How many Dark Souls games have you beaten?</label>
    }
    else
    {
        <label for="gamesBeaten">How many Dark Souls games have you beaten?</label>
    }
    <input type="number" name="gamesBeaten" value="" required/>
    <input type="submit" name="submit" value="Submit" />
</form>
<!--Once all the values are valid, the page displays their awesome level-->
@if (ViewBag.name != "" && ViewBag.age != null && ViewBag.gamesBeaten != null)
{
    <p>Alrighty @ViewBag.name! Your awesomeness is level @ViewBag.aweLevel, Congrats!!</p>
}
